<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xsi="http://www.w3.org/2001/XMLSchema-instance" schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Entities\Base\Account" table="base_accounts">
        <change-tracking-policy>DEFERRED_IMPLICIT</change-tracking-policy>
        <field name="status" type="string" column="status" length="50" precision="0" scale="0"/>
        <field name="username" type="string" column="username" length="255" precision="0" scale="0" unique="1"/>
        <field name="password" type="string" column="password" length="255" precision="0" scale="0"/>
        <field name="first_name" type="string" column="first_name" length="50" precision="0" scale="0"/>
        <field name="last_name" type="string" column="last_name" length="50" precision="0" scale="0"/>
        <field name="mid_name" type="string" column="mid_name" length="50" precision="0" scale="0"/>
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>
        <many-to-many field="roles" target-entity="Entities\Base\Role">
            <join-table name="base_accounts_roles">
                <join-columns>
                    <join-column name="account_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="role_id" referenced-column-name="id" nullable="1"/>
                </inverse-join-columns>
            </join-table>
            <cascade>
                <persist/>
            </cascade>
        </many-to-many>
        <lifecycle-callbacks/>
    </entity>
</doctrine-mapping>
